# ==================== 数据库配置 ====================
# SQLite（开发环境推荐）
DATABASE_URL=sqlite+aiosqlite:///./jianying_auto.db

# PostgreSQL 示例（生产环境）
# DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/jianying_auto

# MySQL 示例（生产环境）
# DATABASE_URL=mysql+aiomysql://root:password@localhost:3306/jianying_auto

# ==================== 剪映配置 ====================
# 剪映安装路径
JIANYING_INSTALL_PATH=C:/Program Files/JianyingPro

# 剪映草稿箱路径（根据实际用户名修改）
JIANYING_DRAFT_PATH=C:/Users/冉勇/AppData/Local/JianyingPro/User Data/Projects/com.lveditor.draft

# 剪映版本
JIANYING_VERSION=6.0.1

# ==================== JianYingApi 配置 ====================
# API 密钥（如果需要）
JIANYING_API_KEY=your_api_key_here
JIANYING_API_SECRET=your_api_secret_here

# ==================== 存储配置 ====================
# 存储根目录
STORAGE_ROOT=./storage

# 素材存储路径
MATERIAL_PATH=./storage/materials

# 草稿存储路径
DRAFT_PATH=./storage/drafts

# 模板存储路径
TEMPLATE_PATH=./storage/templates

# 导出视频存储路径
EXPORT_PATH=./storage/exports

# ==================== 日志配置 ====================
# 日志级别：DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# 日志文件路径
LOG_PATH=./logs

# 日志保留天数
LOG_RETENTION_DAYS=30

# ==================== 导出配置 ====================
# 默认导出分辨率
DEFAULT_RESOLUTION=1920x1080

# 默认导出帧率
DEFAULT_FPS=30

# 最大并发导出任务数
MAX_CONCURRENT_EXPORTS=2

# 导出超时时间（秒）
EXPORT_TIMEOUT=3600

# ==================== 任务配置 ====================
# 最大并发任务数
MAX_CONCURRENT_TASKS=5

# 任务失败重试次数
TASK_RETRY_TIMES=3

# 任务重试延迟（秒）
TASK_RETRY_DELAY=5

# ==================== 安全配置 ====================
# JWT 密钥（请修改为随机字符串）
JWT_SECRET_KEY=your-secret-key-change-this-in-production

# JWT 过期时间（小时）
JWT_EXPIRE_HOURS=24

# ==================== 文件上传限制 ====================
# 最大文件大小（字节，默认 5GB）
MAX_FILE_SIZE=5368709120

# 允许的视频格式
ALLOWED_VIDEO_FORMATS=.mp4,.mov,.avi,.mkv,.flv,.wmv

# 允许的音频格式
ALLOWED_AUDIO_FORMATS=.mp3,.wav,.aac,.m4a,.flac

# 允许的图片格式
ALLOWED_IMAGE_FORMATS=.jpg,.jpeg,.png,.gif,.bmp,.webp

# ==================== 服务器配置 ====================
# 服务器主机
SERVER_HOST=0.0.0.0

# 服务器端口
SERVER_PORT=8000

# 工作进程数
SERVER_WORKERS=4

# ==================== Redis 配置（可选，用于任务队列）====================
# REDIS_URL=redis://localhost:6379/0
